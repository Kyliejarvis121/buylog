generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ----------------------
// Banner Models
// ----------------------
model banners {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  title   String?
  imageUrl String?
  link    String?
}

model homebanners {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  v      Int      @map("__v")
  images String[]
}

model homebottombanners {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model homesidebanners {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

// ----------------------
// Category & Product Models
// ----------------------
model categories {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  slug     String? @unique(map: "slug_1")
  title    String
  products Json?   // store product references or IDs
}

model products {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  title    String?
  description String?
  price    Float?
  category String? // category ID or slug
  images   Json?   // array of image URLs
}

model productrams {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model productsizes {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model productweights {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model productreviews {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  productId String?
  userId String?
  rating Int?
  comment String?
}

// ----------------------
// Orders & Cart
// ----------------------
model carts {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  items Json?
}

model orders {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userId String?
  items Json?
  total Float?
  status String?
}

// ----------------------
// Users
// ----------------------
model users {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  v          Int      @map("__v")
  date       DateTime @db.Date
  email      String
  images     Json?    // array of image URLs
  isAdmin    Boolean
  isVerified Boolean
  name       String
  otp        String?  // store as string for simplicity
  otpExpires DateTime?
  password   String
  phone      String
}

// ----------------------
// Misc / Other Models
// ----------------------
model imageuploads {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  url String?
}

model mylists {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  items Json?
}

model recentlyviewds {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  products Json?
}
