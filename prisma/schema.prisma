generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ----------------------
// Banners
// ----------------------
model banners {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  imageUrl String?
  link     String?
  isActive Boolean? @default(true)
  createdAt DateTime @default(now())
}

model homebanners {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  v      Int      @map("__v")
  images String[]
}

model homebottombanners {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model homesidebanners {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

// ----------------------
// Categories
// ----------------------
model categories {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  slug        String   @unique
  imageUrl    String?
  description String?
  isActive    Boolean? @default(true)
}

// ----------------------
// Products
// ----------------------
model products {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  price       Float?
  categoryId  String   // references categories.id
  images      String[] @default([])
  isActive    Boolean? @default(true)
  createdAt   DateTime @default(now())
}

model productrams {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model productsizes {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model productweights {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model productreviews {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  productId String
  userId    String
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
}

// ----------------------
// Markets
// ----------------------
model markets {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  slug        String   @unique
  logoUrl     String?
  description String?
  isActive    Boolean? @default(true)
  categoryIds String[] @default([])
  createdAt   DateTime @default(now())
}

// ----------------------
// Sales
// ----------------------
model sales {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  items     Json
  total     Float
  status    String?   @default("pending")
  createdAt DateTime  @default(now())
}

// ----------------------
// Cart & Orders
// ----------------------
model carts {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  userId String
  items Json?
  createdAt DateTime @default(now())
}

model orders {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  userId String
  items  Json?
  total  Float?
  status String?  @default("pending")
  createdAt DateTime @default(now())
}

// ----------------------
// Users
// ----------------------
model users {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  email      String   @unique
  name       String
  password   String
  phone      String?
  images     String[] @default([])
  isAdmin    Boolean? @default(false)
  isVerified Boolean? @default(false)
  otp        String?
  otpExpires DateTime?
  createdAt  DateTime @default(now())
}

// ----------------------
// Misc / Other
// ----------------------
model imageuploads {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  url String
}

model mylists {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  userId String
  items Json?
  createdAt DateTime @default(now())
}

model recentlyviewds {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  userId   String
  products Json?
  createdAt DateTime @default(now())
}
