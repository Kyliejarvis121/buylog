generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ===============================
// USERS
// ===============================
model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String?  @unique
  password String
  farmers  Farmer[]
}

// ===============================
// FARMERS
// ===============================
model Farmer {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  userId   String    @db.ObjectId
  isActive Boolean?  @default(false)
  products Product[]

  user User @relation(fields: [userId], references: [id])
}

// ===============================
// CATEGORIES
// ===============================
model Category {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  slug        String?  @unique
  description String?
  imageUrl    String?
  isActive    Boolean? @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  products Product[]
}

// ===============================
// PRODUCTS
// ===============================
model Product {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  title          String
  slug           String?   @unique
  description    String?
  price          Float?     // ðŸ”¥ FIXED â€” now optional
  salePrice      Float?
  productStock   Int       @default(0)
  categoryId     String?   @db.ObjectId
  farmerId       String?   @db.ObjectId
  imageUrl       String?
  productImages  String[]  @default([])
  tags           String[]  @default([])
  productCode    String?
  isWholesale    Boolean?  @default(false)
  wholesalePrice Float?
  wholesaleQty   Int?
  isActive       Boolean?  @default(true)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  category Category? @relation(fields: [categoryId], references: [id])
  farmer   Farmer?   @relation(fields: [farmerId], references: [id])
}

// ===============================
// FARMER SUPPORT
// ===============================
model FarmerSupport {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  message   String
  status    String?  @default("pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
