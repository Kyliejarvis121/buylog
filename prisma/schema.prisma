generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

//
// ===============================
// USERS
// ===============================
model User {
  id                     String    @id @default(auto()) @map("_id") @db.ObjectId
  name                   String
  email                  String    @unique
  password               String?   // optional
  role                   String    @default("FARMER")
  emailVerified          Boolean   @default(false)
  emailVerificationToken String?

  image                  String?   // profile image

  // üîê FORGOT PASSWORD
  resetToken             String?
  resetTokenExpiry       DateTime?

  // ‚ö° Timestamps
  createdAt              DateTime  @default(now())  // automatically set on creation
  updatedAt              DateTime  @updatedAt      // automatically set on creation & update

  // ‚úÖ REQUIRED BY NEXTAUTH
  accounts               Account[]
  sessions               Session[]

  // YOUR RELATIONS
  profile                Profile?
  farmers                Farmer[]
  orders                 Order[]
}



//
// ===============================
// USER PROFILE
// ===============================
model Profile {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @unique @db.ObjectId

  avatar  String?
  phone   String?
  address String?
  country String?
  bio     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

//
// ===============================
// FARMERS
// ===============================
model Farmer {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  userId   String   @db.ObjectId
  isActive Boolean? @default(false)

  products Product[]
  user     User      @relation(fields: [userId], references: [id])
}

//
// ===============================
// CATEGORIES
// ===============================
model Category {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  slug        String?      @unique
  description String?
  imageUrl    String?
  iconKey     String?
  isActive    Boolean?     @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  products    Product[]
  marketCategories MarketCategory[]
}

//
// ===============================
// PRODUCTS
// ===============================
model Product {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  title          String
  slug           String?  @unique
  description    String?
  price          Float?   @default(0)
  salePrice      Float?   @default(0)
  productStock   Int      @default(0)
  categoryId     String?  @db.ObjectId
  farmerId       String?  @db.ObjectId
  imageUrl       String?
  productImages  String[] @default([])
  tags           String[] @default([])
  productCode    String?
  sku            String?
  barcode        String?
  unit           String?
  qty            Int?     @default(1)
  isWholesale    Boolean? @default(false)
  wholesalePrice Float?   @default(0)
  wholesaleQty   Int?     @default(0)
  isActive       Boolean? @default(true)
  phoneNumber    String?

  location       String?   // ‚úÖ NEW FIELD (e.g. "Benin City, Edo")

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  category   Category?   @relation(fields: [categoryId], references: [id])
  farmer     Farmer?     @relation(fields: [farmerId], references: [id])
  orderItems OrderItem[]
}

//
// ===============================
// FARMER SUPPORT
// ===============================
model FarmerSupport {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  message   String
  status    String?  @default("pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

//
// ===============================
// BANNERS
// ===============================
model Banner {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  imageUrl  String
  link      String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

//
// ===============================
// MARKETS
// ===============================
model Market {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  slug        String?      @unique
  description String?
  logoUrl     String?
  isActive    Boolean?     @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  marketCategories MarketCategory[]
}

//
// ===============================
// COUPONS
// ===============================
model Coupon {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  code        String    @unique
  description String?
  discount    Float
  isActive    Boolean?  @default(true)
  expiresAt   DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

//
// ===============================
// ORDERS
// ===============================
model Order {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  status      String   @default("pending")
  totalAmount Float    @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  items OrderItem[]
  user  User        @relation(fields: [userId], references: [id])
}

//
// ===============================
// ORDER ITEMS
// ===============================
model OrderItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  orderId   String   @db.ObjectId
  productId String   @db.ObjectId
  quantity  Int      @default(1)
  price     Float    @default(0)
  createdAt DateTime @default(now())

  order   Order   @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

//
// ===============================
// NEXTAUTH: ACCOUNT
// ===============================
model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

//
// ===============================
// NEXTAUTH: SESSION
// ===============================
model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime

  user User @relation(fields: [userId], references: [id])
}

//
// ===============================
// NEXTAUTH: VERIFICATION TOKEN
// ===============================
model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model SupportMessage {
  id      String   @id @map("_id") @default(auto()) @db.ObjectId
  name    String
  email   String?
  message String
  status  String   @default("pending")
  createdAt DateTime @default(now())
}

// Join table
model MarketCategory {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  market     Market   @relation(fields: [marketId], references: [id])
  marketId   String   @db.ObjectId
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String   @db.ObjectId

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
