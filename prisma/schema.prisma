generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

//
// ===============================
// USERS
// ===============================
model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String? @unique
  password String
  role     String  @default("user")

  farmers Farmer[]
  orders  Order[] // ðŸ‘ˆ ADDED (Fixes relation)
}

//
// ===============================
// FARMERS
// ===============================
model Farmer {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  userId   String    @db.ObjectId
  isActive Boolean?  @default(false)
  products Product[]

  user User @relation(fields: [userId], references: [id])
}

//
// ===============================
// CATEGORIES
// ===============================
model Category {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  slug        String?  @unique
  description String?
  imageUrl    String?
  isActive    Boolean? @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  products Product[]
}

//
// ===============================
// PRODUCTS
// ===============================
model Product {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  title          String
  slug           String?  @unique
  description    String?
  price          Float?   @default(0)
  salePrice      Float?   @default(0)
  productStock   Int      @default(0)
  categoryId     String?  @db.ObjectId
  farmerId       String?  @db.ObjectId
  imageUrl       String?
  productImages  String[] @default([])
  tags           String[] @default([])
  productCode    String?
  isWholesale    Boolean? @default(false)
  wholesalePrice Float?   @default(0)
  wholesaleQty   Int?     @default(0)
  isActive       Boolean? @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  category   Category?   @relation(fields: [categoryId], references: [id])
  farmer     Farmer?     @relation(fields: [farmerId], references: [id])
  orderItems OrderItem[] // ðŸ‘ˆ ADDED (Fixes relation)
}

//
// ===============================
// FARMER SUPPORT
// ===============================
model FarmerSupport {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  message   String
  status    String?  @default("pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

//
// ===============================
// BANNERS
// ===============================
model Banner {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  imageUrl  String
  link      String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

//
// ===============================
// MARKETS
// ===============================
model Market {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  slug        String?  @unique
  description String?
  logoUrl     String?
  isActive    Boolean? @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

//
// ===============================
// COUPONS
// ===============================
model Coupon {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  code        String    @unique
  description String?
  discount    Float
  isActive    Boolean?  @default(true)
  expiresAt   DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

//
// ===============================
// ORDERS
// ===============================
model Order {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  status      String   @default("pending")
  totalAmount Float    @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  items OrderItem[]
  user  User        @relation(fields: [userId], references: [id])
}

//
// ===============================
// ORDER ITEMS
// ===============================
model OrderItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  orderId   String   @db.ObjectId
  productId String   @db.ObjectId
  quantity  Int      @default(1)
  price     Float    @default(0)
  createdAt DateTime @default(now())

  order   Order   @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}
